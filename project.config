[project]
	description = Packaging content for puppet (distgit)
[access "refs/*"]
  read = group puppet/puppet-certmonger-distgit-core
  owner = group puppet/puppet-certmonger-distgit-ptl
[access "refs/heads/*"]
	label-Code-Review = -2..+2 group puppet/puppet-certmonger-distgit-core
	label-Code-Review = -2..+2 group puppet/puppet-certmonger-distgit-ptl
	label-Verified = -2..+2 group puppet/puppet-certmonger-distgit-ptl
	label-Workflow = -1..+1 group puppet/puppet-certmonger-distgit-core
	label-Workflow = -1..+1 group puppet/puppet-certmonger-distgit-ptl
	label-Workflow = -1..+0 group Registered Users
	submit = group puppet/puppet-certmonger-distgit-ptl
	read = group Registered Users
    read = group puppet/puppet-certmonger-distgit-core
[access "refs/meta/config"]
    read = group Registered Users
    read = group puppet/puppet-certmonger-distgit-core
[receive]
	requireChangeId = true
[submit]
	mergeContent = false
	action = fast forward only
